@model CalculatorApp.MVC.Models.CalculatorViewModel

@{
    ViewData["Title"] = "Calculate";
}

<h1>Calculate</h1>

<h4>CalculatorViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Calculate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Operand" class="control-label"></label>
                <input asp-for="Operand" class="form-control" />
                <span asp-validation-for="Operand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="X" class="control-label"></label>
                <input asp-for="X" class="form-control" />
                <span asp-validation-for="X" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Y" class="control-label"></label>
                <input asp-for="Y" class="form-control" />
                <span asp-validation-for="Y" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@{ 
    if (Model.Errors.Any())
    {
        foreach(var error in Model.Errors)
        {
            <p style="color: red;">@error</p>
        }
    }
    else
    {
        @Model.Result
    }
}

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
